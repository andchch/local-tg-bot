# ===========================================
# Telegram Bot Configuration
# ===========================================

# Get your bot token from @BotFather on Telegram
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ===========================================
# AI Provider Configuration
# ===========================================

# Choose AI provider: "openai" or "anthropic"
AI_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ===========================================
# Database Configuration
# ===========================================

# Path to SQLite database file
DB_PATH=data/messages.db

# ===========================================
# Bot Behavior Settings
# ===========================================

# Default number of hours for /summary command (when no parameter provided)
DEFAULT_SUMMARY_HOURS=24

# Maximum allowed hours for /summary command
MAX_SUMMARY_HOURS=168

# Auto-cleanup messages older than N days (default: 30)
MESSAGE_CLEANUP_DAYS=30

# ===========================================
# Logging Configuration
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
