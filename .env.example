# ===========================================
# Telegram Bot Configuration
# ===========================================

# Get your bot token from @BotFather on Telegram
BOT_TOKEN=

# ===========================================
# AI Provider Configuration
# ===========================================

# Choose AI provider: "openai" or "anthropic" or "yagpt"
AI_PROVIDER=

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=
OPENAI_MODEL=

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=

# Yandex Configuration (if using Yandex)
YANDEX_API_KEY=
YANDEX_MODEL=
YANDEX_PROJECT_ID=

# Yandex SpeechKit Configuration (required for voice transcription)
YANDEX_SPEECHKIT_API_KEY=

# ===========================================
# Database Configuration
# ===========================================

# Path to SQLite database file
DB_PATH=data/messages.db

# ===========================================
# Bot Behavior Settings
# ===========================================

# Default number of hours for /summary command (when no parameter provided)
DEFAULT_SUMMARY_HOURS=24

# Maximum allowed hours for /summary command
MAX_SUMMARY_HOURS=168

# Auto-cleanup messages older than N days (default: 30)
MESSAGE_CLEANUP_DAYS=30

# ===========================================
# Logging Configuration
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================================
# Access Control Configuration
# ===========================================

# Known users as JSON object mapping user_id to display name
# Example: {"123456789": "John", "987654321": "Jane"}
KNOWN_USERS={}

# Allowed chat IDs (comma-separated)
# Example: 4807121107,2564752611
ALLOWED_CHAT_IDS=
